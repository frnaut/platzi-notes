{
    "manifest_version": 3,
    "name": "Platzi Notes",
    "version": "1.4",
    "description": "Extensi√≥n para tomar y gestionar notas mientras estudias en Platzi.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://platzi.com/*"],
    "content_scripts": [
      {
        "matches": ["https://platzi.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"],
        "run_at": "document_idle"
      }
    ]
  }
  